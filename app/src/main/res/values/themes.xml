<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <attr name="fontColorPrimary" format="color" />
    <attr name="fontColorSecondary" format="color" />
    <attr name="fontColorTertiary" format="color" />
    <attr name="colorDivider" format="color" />

    <style name="Theme.WanAndroid" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontColorPrimary">@color/color_333333</item>
        <item name="fontColorSecondary">@color/color_666666</item>
        <item name="fontColorTertiary">@color/color_999999</item>
        <item name="colorDivider">@color/color_dddddd</item>
    </style>

    <style name="Theme.WanAndroid.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WanAndroid.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WanAndroid.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>